<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       	http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
       	http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-3.2.xsd">

	<bean class="fr.gael.dhus.spring.context.DHuSContextLoader" />
	
	<bean id="solrAuthEntryPoint"
		class="org.springframework.security.web.authentication.www.BasicAuthenticationEntryPoint">
		<property name="realmName" value="Solr admininstration" />
	</bean>
	
	<security:http entry-point-ref="solrAuthEntryPoint" use-expressions="true"
		disable-url-rewriting="true">

		<security:custom-filter position="PRE_AUTH_FILTER"
			ref="preAuthFilter" />
		<security:custom-filter position="BASIC_AUTH_FILTER"
			ref="basicAuthFilter" />

		<security:logout invalidate-session="true"
			success-handler-ref="logoutSuccessHandler" />

		<security:intercept-url pattern="/**"
			access="hasRole('ROLE_SYSTEM_MANAGER')" />
	</security:http>
</beans>
